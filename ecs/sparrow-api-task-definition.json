{
    "family": "sparrow-api-task-definition",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "sparrow-api",
            "image": "050752639725.dkr.ecr.ap-south-1.amazonaws.com/core/sparrow:latest",
            "cpu": 0,
            "memory": 512,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 8080,
                    "protocol": "tcp",
                    "name": "sparrow-api-8080-tcp",
                    "appProtocol": "http"
                }
            ],
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost:8080/ || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 60
            },
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/sparrow-api-task-definition",
                    "awslogs-region": "ap-south-1",
                    "awslogs-stream-prefix": "ecs",
                    "awslogs-create-group": "true",
                    "mode": "non-blocking",
                    "max-buffer-size": "25m"
                }
            }
        }
    ],
    "executionRoleArn": "arn:aws:iam::050752639725:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::050752639725:role/ecsTaskExecutionRole",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512",
    "tags": [
        {
            "key": "Environment",
            "value": "Production"
        }
    ]
}
