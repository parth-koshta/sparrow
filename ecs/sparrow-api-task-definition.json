{
  "family": "sparrow-api-task-definition",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "sparrow-api",
      "image": "050752639725.dkr.ecr.ap-south-1.amazonaws.com/core/sparrow:latest",
      "cpu": 0,
      "memory": 512,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp",
          "name": "sparrow-api-8080-tcp",
          "appProtocol": "http"
        }
      ],
      "logConfiguration": {
        "logDriver": "awsfirelens",
        "options": {
          "Name": "grafana-loki",
          "Host": "13.233.66.122",
          "Port": "3100",
          "Labels": "task,container",
          "LineFormat": "json"
        }
      }
    },
    {
      "name": "log-router",
      "image": "amazon/aws-for-fluent-bit:latest",
      "essential": true,
      "firelensConfiguration": {
        "type": "fluentbit",
        "options": {
          "enable-ecs-log-metadata": "true"
        }
      }
    }
  ],
  "executionRoleArn": "arn:aws:iam::050752639725:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::050752639725:role/ecsTaskExecutionRole",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "tags": [
    {
      "key": "Environment",
      "value": "Production"
    }
  ]
}
